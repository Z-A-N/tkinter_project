import tkinter as tk

# ======= Setup Jendela Utama =======
root = tk.Tk()
root.title("Aplikasi Pengelolaan Keuangan")  # Judul aplikasi
root.geometry("800x600")  # Ukuran jendela
root.resizable(True, True)  # Membuat jendela bisa diubah ukurannya

# ======= Fungsi untuk mengganti konten =======
def change_content(page_name):
    # Hapus semua widget yang ada di main_frame
    for widget in main_frame.winfo_children():
        widget.destroy()

    # Menampilkan konten sesuai pilihan
    if page_name == "Home":
        content_label = tk.Label(main_frame, text="Selamat datang di Aplikasi Pengelolaan Keuangan!", font=("Arial", 14))
        content_label.pack(pady=50)
    elif page_name == "Transaksi":
        content_label = tk.Label(main_frame, text="Halaman Transaksi", font=("Arial", 14))
        content_label.pack(pady=50)
    elif page_name == "Laporan":
        content_label = tk.Label(main_frame, text="Laporan Keuangan", font=("Arial", 14))
        content_label.pack(pady=50)
    elif page_name == "Pengaturan":
        content_label = tk.Label(main_frame, text="Halaman Pengaturan", font=("Arial", 14))
        content_label.pack(pady=50)
    elif page_name == "Logout":
        content_label = tk.Label(main_frame, text="Halaman Logout", font=("Arial", 14))
        content_label.pack(pady=50)
        

# ======= Navbar =======
navbar = tk.Frame(root, bg="#F9F9F9", height=50)  # Navbar di atas
navbar.pack(side="top", fill="x")

navbar_label = tk.Label(navbar, text="Aplikasi Pengelolaan Keuangan", fg="black", font=("Arial", 16))
navbar_label.pack(pady=10)

# ======= Sidebar =======
sidebar_width = 200
sidebar = tk.Frame(root, width=200, bg="#F9F9F9", height=550, relief="sunken")  # Sidebar di kiri
sidebar.pack(side="left", fill="y")

# Tombol Sidebar dengan fungsionalitas untuk ganti konten
home_button = tk.Button(sidebar, text="Home", width=20)
home_button.pack(pady=10, padx=10)

transactions_button = tk.Button(sidebar, text="Transaksi", width=20)
transactions_button.pack(pady=10)

report_button = tk.Button(sidebar, text="Laporan", width=20)
report_button.pack(pady=10)

settings_button = tk.Button(sidebar, text="Pengaturan", width=20)
settings_button.pack(pady=10)

logout_button = tk.Button(sidebar, text="Logout", width=20)
logout_button.pack(pady=10)

# Menyambungkan tombol dengan fungsi untuk mengganti konten
home_button.config(command=lambda: change_content("Home"))
transactions_button.config(command=lambda: change_content("Transaksi"))
report_button.config(command=lambda: change_content("Laporan"))
settings_button.config(command=lambda: change_content("Pengaturan"))
logout_button.config(command=lambda: change_content("Logout"))

#Tombol toggle sidebar (perbesar/kecilkan)
# ======= Main Content Area =======
main_frame = tk.Frame(root, bg="white", height=550)  # Area utama untuk konten
main_frame.pack(side="right", fill="both", expand=True)

# Menjalankan aplikasi
root.mainloop()
